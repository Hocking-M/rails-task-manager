
<div class="container">
  <h1>My tasks</h1>
    <% @tasks.each do |task| %>
        <p> <%= link_to task.title, task_path(task)%>
        <%= check_box_tag "task[completed]", task.completed, task.completed %> </p>
        <p> <%= task.details %> </p>
        <p>-----------------------------------</p>
    <% end %>

    <%= link_to 'New task', new_task_path %>
</div>
